{
	"$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"**/*.ts",
			"**/*.js",
			"**/*.mjs",
			"**/*.cjs",
			"**/*.tsx",
			"**/*.jsx",
			"**/*.astro",
			"**/*.svelte",
			"!**/src/**/*.css",
			"!**/src/public/**/*",
			"!**/dist/**/*",
			"!**/node_modules/**/*",
			"!**/.astro/**/*"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"overrides": [
		{
			"includes": ["astro.config.mjs"],
			"formatter": {
				"lineWidth": 100
			}
		},
		{
			"includes": ["**/*.svelte", "**/*.astro"],
			"formatter": {
				"lineWidth": 80
			},
			"linter": {
				"rules": {
					"style": {
						"useConst": "off",
						"useImportType": "off"
					},
					"correctness": {
						"noUnusedVariables": "off",
						"noUnusedImports": "off"
					}
				}
			}
		}
	]
}
