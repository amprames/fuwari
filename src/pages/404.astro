---
import { Icon } from "astro-icon/components";
import I18nKey from "../i18n/i18n-keys";
import { i18n } from "../i18n/translation";
import MainGridLayout from "../layouts/MainGridLayout.astro";
---

<MainGridLayout title="Page Not Found" description="The page you're looking for doesn't exist.">
  <div class="flex flex-col items-center justify-center min-h-[60vh] text-center">
    <div class="mb-8">
      <Icon name="material-symbols:search-off" class="text-8xl text-[var(--primary)] opacity-50" />
    </div>
    
    <h1 class="text-4xl font-bold text-[var(--normal-text)] mb-4">
      Page Not Found
    </h1>
    
    <p class="text-lg text-[var(--meta-text)] mb-8 max-w-md">
      The page you're looking for doesn't exist. It might have been moved, deleted, or you entered the wrong URL.
    </p>
    
    <div class="flex gap-4 flex-wrap justify-center">
      <a 
        href="/"
        class="btn-regular px-6 py-3 rounded-lg bg-[var(--btn-regular-bg)] hover:bg-[var(--btn-regular-bg-hover)] active:bg-[var(--btn-regular-bg-active)] transition flex items-center gap-2 text-[var(--btn-content)]"
      >
        <Icon name="material-symbols:home" class="text-lg" />
        Go Home
      </a>
      
      <a 
        href="/archive"
        class="btn-plain px-6 py-3 rounded-lg hover:bg-[var(--btn-plain-bg-hover)] active:bg-[var(--btn-plain-bg-active)] transition flex items-center gap-2"
      >
        <Icon name="material-symbols:library-books" class="text-lg" />
        Browse Posts
      </a>
      
      <button 
        onclick="history.back()"
        class="btn-plain px-6 py-3 rounded-lg hover:bg-[var(--btn-plain-bg-hover)] active:bg-[var(--btn-plain-bg-active)] transition flex items-center gap-2"
      >
        <Icon name="material-symbols:arrow-back" class="text-lg" />
        Go Back
      </button>
    </div>
    
    <!-- Search suggestion -->
    <div class="mt-12 p-6 bg-[var(--card-bg)] rounded-[var(--radius-large)] max-w-md">
      <h3 class="text-lg font-semibold mb-3 text-[var(--normal-text)]">
        Looking for something specific?
      </h3>
      <p class="text-[var(--meta-text)] mb-4">
        Try using the search function to find what you're looking for.
      </p>
      <button 
        onclick="document.getElementById('search-switch')?.click()"
        class="btn-regular px-4 py-2 rounded-lg bg-[var(--btn-regular-bg)] hover:bg-[var(--btn-regular-bg-hover)] active:bg-[var(--btn-regular-bg-active)] transition flex items-center gap-2 mx-auto text-[var(--btn-content)]"
      >
        <Icon name="material-symbols:search" class="text-lg" />
        Search
      </button>
    </div>
  </div>
</MainGridLayout>

<style>
  .btn-regular, .btn-plain {
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-weight: 500;
    transition: all 0.2s ease;
  }
  
  .btn-regular:hover, .btn-plain:hover {
    transform: translateY(-1px);
  }
  
  .btn-regular:active, .btn-plain:active {
    transform: translateY(0);
  }
</style>