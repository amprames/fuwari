---
import {
	buttonTagPropsSchema,
	validateAndSanitize,
} from "../../utils/validation-utils";

interface Props {
	size?: string;
	dot?: boolean;
	href?: string;
	label?: string;
}

// Validate and sanitize props to prevent XSS
const validatedProps = validateAndSanitize(buttonTagPropsSchema, Astro.props);
const { dot, href, label } = validatedProps;
---
<a href={href} aria-label={label} class="btn-regular h-8 text-sm px-3 rounded-lg">
    {dot && <div class="h-1 w-1 bg-[var(--btn-content)] dark:bg-[var(--card-bg)] transition rounded-md mr-2"></div>}
    <slot></slot>
</a>
